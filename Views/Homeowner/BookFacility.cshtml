@{
    ViewBag.Title = "Book a Facility";
    var facilities = ViewBag.Facilities as List<homeowner.Models.FacilityModel>;
    var reservations = ViewBag.UserReservations as List<homeowner.Models.FacilityReservationModel>;

    TimeSpan minTime = new TimeSpan(7, 30, 0);
    TimeSpan maxTime = new TimeSpan(22, 0, 0);
    var timeOptions = new List<string>();
    for (TimeSpan t = minTime; t <= maxTime; t = t.Add(TimeSpan.FromMinutes(30)))
    {
        timeOptions.Add(t.ToString(@"hh\:mm"));
    }
    var today = DateTime.Now.ToString("yyyy-MM-dd");

    int pageSize = 4;
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalReservations = reservations.Count;
    int totalPages = (int)Math.Ceiling((double)totalReservations / pageSize);
    var paginatedReservations = reservations; // Show all reservations
}

<head>
    <link rel="stylesheet" href="~/css/home.css" />
</head>

<div class="container mt-4">
    <h1 class="text-center text-white">Book a Facility</h1>

    <div class="text-center mb-4">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#bookingModal">Book a Facility</button>
    </div>

    <!-- Booking Modal -->
    <div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content bg-dark text-white">
                <div class="modal-header">
                    <h5 class="modal-title" id="bookingModalLabel">Book a Facility</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="bookFacilityForm">
                        <div class="mb-3">
                            <label class="form-label">Select Facility</label>
                            <div class="d-flex flex-wrap gap-3">
                                @foreach (var facility in facilities)
                                {
                                    <div class="facility-card" data-id="@facility.FacilityID"
                                        data-name="@facility.FacilityName">
                                        <div class="facility-image"
                                            style="background-image: url('/images/@(facility.FacilityName.ToLower().Contains("basketball") ? "basketball_court.jpg" : facility.FacilityName.ToLower().Contains("pool") ? "swimming_pool.jpg" : facility.FacilityName.ToLower().Contains("hall") ? "hall.jpg" : "default.jpg")');">
                                        </div>
                                        <p class="facility-name">@facility.FacilityName</p>
                                    </div>
                                }
                            </div>
                            <input type="hidden" id="facilitySelect" required>
                        </div>
                        <div class="mb-3">
                            <label for="reservationDate" class="form-label">Reservation Date</label>
                            <input type="date" id="reservationDate" class="form-control" required min="@today">
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="startTime" class="form-label">Start Time</label>
                                <select id="startTime" class="form-select" required>
                                    @foreach (var time in timeOptions)
                                    {
                                        <option value="@time">@time</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="endTime" class="form-label">End Time</label>
                                <select id="endTime" class="form-select" required>
                                    @foreach (var time in timeOptions)
                                    {
                                        <option value="@time">@time</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary w-100">Book Facility</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <h2 class="text-center text-white mt-4">Reservation History</h2>
    <div class="reservation-timeline">
        @foreach (var res in paginatedReservations)
        {
            <div class="timeline-item">
                <div
                    class="timeline-icon bg-@(res.Status == "Confirmed" ? "success" : res.Status == "Pending" ? "warning" : "danger")">
                    <i
                        class="@(res.Status == "Confirmed" ? "fas fa-check-circle" : res.Status == "Pending" ? "fas fa-clock" : "fas fa-times-circle")"></i>
                </div>
                <div class="timeline-content">
                    <div class="facility-img"
                        style="background-image: url('/images/@(res.FacilityName.ToLower().Contains("basketball") ? "basketball_court.jpg" : res.FacilityName.ToLower().Contains("pool") ? "swimming_pool.jpg" : res.FacilityName.ToLower().Contains("hall") ? "hall.jpg" : "default.jpg")');">
                    </div>
                    <div class="details">
                        <h5>@res.FacilityName</h5>
                        <p>
                            <strong>Date:</strong> @res.ReservationDate.ToString("yyyy-MM-dd")<br>
                            <strong>Time:</strong> @res.StartTime - @res.EndTime
                        </p>
                        <span
                            class="badge bg-@(res.Status == "Confirmed" ? "success" : res.Status == "Pending" ? "warning" : "danger")">
                            @res.Status
                        </span>
                    </div>
                </div>
            </div>
        }
    </div>


</div>

<style>
    body {
        background-color: #121212;
        color: #ffffff;
        font-family: Arial, sans-serif;
    }

    .container {
        background-color: #1e1e1e;
        padding: 20px;
        border-radius: 10px;
    }

    .form-label {
        color: #ffffff;
    }

    .form-control,
    .form-select {
        background-color: #2a2a2a;
        color: #ffffff;
        border: 1px solid #444;
    }

    .form-control::placeholder,
    .form-select option {
        color: #b0b0b0;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: 0.3s;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .facility-card {
        width: 150px;
        height: 180px;
        background: #333;
        border-radius: 10px;
        text-align: center;
        padding: 10px;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .facility-card:hover,
    .facility-card.selected {
        transform: scale(1.05);
        border: 2px solid #007bff;
    }

    .facility-image {
        width: 100%;
        height: 120px;
        background-size: cover;
        background-position: center;
        border-radius: 8px;
    }

    .facility-name {
        margin-top: 10px;
        font-size: 14px;
        color: white;
    }

    .reservation-timeline {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
        margin-top: 20px;
    }

    .timeline-item {
        display: flex;
        align-items: center;
        width: 90%;
        max-width: 600px;
        background: #333;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        transition: 0.3s ease;
    }

    .timeline-item:hover {
        transform: scale(1.02);
    }

    .timeline-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        margin-right: 15px;
    }

    .timeline-content {
        display: flex;
        align-items: center;
        width: 100%;
    }

    .facility-img {
        width: 80px;
        height: 80px;
        background-size: cover;
        background-position: center;
        border-radius: 8px;
        margin-right: 15px;
    }

    .details {
        color: white;
    }

    .details h5 {
        margin-bottom: 5px;
    }

    .badge {
        padding: 5px 10px;
        font-size: 0.9rem;
        border-radius: 5px;
    }

    .pagination .page-link {
        background-color: #2a2a2a;
        color: #ffffff;
        border: 1px solid #444;
    }

    .pagination .page-link:hover {
        background-color: #444;
    }

    .pagination .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>

<script>
    $(document).ready(function () {
        $(".facility-card").click(function () {
            $(".facility-card").removeClass("selected");
            $(this).addClass("selected");
            $("#facilitySelect").val($(this).data("id"));
        });

        $("#bookFacilityForm").submit(function (e) {
            e.preventDefault();
            var facilityID = $("#facilitySelect").val();
            var reservationDate = $("#reservationDate").val();
            var startTime = $("#startTime").val();
            var endTime = $("#endTime").val();

            if (!facilityID) {
                alert("Please select a facility.");
                return;
            }

            $.ajax({
                url: '@Url.Action("Book", "FacilityReservation")',
                type: 'POST',
                data: { facilityID: facilityID, reservationDate: reservationDate, startTime: startTime, endTime: endTime },
                success: function (response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert(response.message);
                    }
                }
            });
        });
    });
</script>