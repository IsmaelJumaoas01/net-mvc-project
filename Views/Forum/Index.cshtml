@model IEnumerable<homeowner.Models.ForumPostModel>
@{
    ViewBag.Title = "Forum";
}

<link rel="stylesheet" href="~/css/home.css" />
<link rel="stylesheet" href="~/css/homeowner_forum.css" />
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<div class="container mt-4">
    <h1 class="text-center">Community Forum</h1>
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="post-card">
                    <div class="card-header">
                        <h5 class="card-title">@post.Title</h5>
                        <small class="text-muted">Posted by @post.Username on @post.CreatedAt.ToString("yyyy-MM-dd hh:mm tt")</small>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@post.Content.Substring(0, 150) + "..."</p>
                        <a href="@Url.Action("Details", "Forum", new { id = post.PostID })" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .post-card {
        background-color: #222;
        border-radius: 10px;
        transition: transform 0.3s, box-shadow 0.3s;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    }

    .post-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 188, 212, 0.3);
    }

    .card-header {
        background-color: #333;
        color: #fff;
    }

    .card-body {
        background-color: #1e1e1e;
        color: #ddd;
    }

    .btn-primary {
        background-color: #00bcd4;
        border: none;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #008ba3;
    }
</style> 