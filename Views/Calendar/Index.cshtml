        }

        .fc-timegrid-event {
            border-radius: 4px !important;
            margin: 1px 0 !important;
        }

        .fc-timegrid-slot-label {
            color: #c9d1d9 !important;
        }

        .fc-timegrid-axis {
            color: #c9d1d9 !important;
        }

        .fc-list-day-cushion {
            background-color: #2d333b !important;
        }

        .fc-list-event td {
            color: #c9d1d9 !important;
        }

        .fc-list-day-text,
        .fc-list-day-side-text {
            color: #fff !important;
        }

        /* Modal Customization */
        .modal-content {
            background: #2d333b;
            border: 1px solid #444c56;
            border-radius: 12px;
            color: #fff;
        }

        .modal-header {
            background: #22272e;
            border-bottom: 1px solid #444c56;
            padding: 1.5rem;
            border-radius: 12px 12px 0 0;
        }

        .modal-title {
            color: #fff;
            font-size: 1.5rem;
            font-weight: 600;
        }

        .modal-body {
            padding: 2rem;
        }

        .event-details {
            background: #22272e;
            border-radius: 8px;
            padding: 1.5rem;
        }

        .event-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #444c56;
        }

        .event-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
        }

